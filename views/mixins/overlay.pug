mixin overlay(category_name, description)
    div(class="absolute top-0 h-screen bg-slate-700 w-screen opacity-50")
    //- category detail popup
    div(class="flex flex-col justify-between w-3/4 h-1/3 bg-black absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 p-8")
        div(class="top flex justify-between items-center")
            p(class="text-4xl") #{category_name}
            p(class="text-red-700 text-6xl cursor-pointer") x 
        div(class="middle")
        p(class="text-gray-500 text-2xl") #{description}
        div(class="bottom")
        a(href="../store/items" class="text-yellow-500 underline text-2xl") View Items
