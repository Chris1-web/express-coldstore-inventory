mixin categoriesList(category)
    div(id="card-container" class="flex justify-between items-center px-10 py-2 mx-20 border-2 border-gray-400 bg-white")
        p(class="text-blue-500 text-4xl") #{category.name}
        ul(class="icon flex items-center gap-4 cursor-pointer") 
            li
                a(href=`${category.url}/update`)
                    img(src="/images/edit.png" class="w-10 h-auto")
            li 
                a(href=category.url)
                    img(src="/images/down-arrow.png" class="w-10 h-auto")
            li 
                a(href=`${category.url}/delete`)
                    img(src="/images/delete.png" class="w-10 h-auto")