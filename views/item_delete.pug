extends layout 
include mixins/nav 

block content 
    +nav("add-item")

    div(class="max-w-7xl mx-auto bg-custom-yellow h-custom-screen-80 overflow-scroll rounded-t-3xl text-black")
        h1(class="text-center text-5xl mt-10") Delete Item
        p(class="text-3xl text-center my-5 text-red-400") Note that this action cannot be reversed
        //- item container
        div(class="list-container h-3/6 flex gap-10 items-center p-8 bg-white rounded-2xl mx-10")
            div(class="item-image max-w-[40%]")
                img(src="/images/chicken-gizzard.jpeg" class="border-4 border-gray-300 rounded-[50px]")
            div(class="item-information flex flex-col gap-10 justify-between")
                div(class="top-information flex justify-between items-center")
                    h3(class="text-5xl text-custom-blue") #{item.name}
                    p(class="bg-transparent border border-custom-blue text-custom-blue text-sm text-center px-6 py-1.5 rounded-3xl") #{item.category.name}
                p(class="text-black text-lg") #{item.summary}
                div(class="price-information flex justify-between")
                    p(class="font-bold text-black text-2xl") $#{item.price}
                    p(class="text-slate-500") #{item.numberInStock} in stock
        div(class="flex justify-center items-center pt-5")
            form(method="post" class="flex flex-col w-1/2")
                input(type="hidden" value=(item._id))
                button(class="bg-red-700 text-4xl text-white px-2 py-10 hover:bg-red-900") Delete 